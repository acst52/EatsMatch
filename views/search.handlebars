<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <style>
        fieldset {
            border: 0;
        }

        label {
            display: block;
            margin: 30px 0 0 0;
        }

        .overflow {
            height: 200px;
        }

        .ui-selectmenu-button {
            border-radius: 50px;
            padding: 10px;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
      const endpoint = "searchRoutes"; // replace with actual endpoint

    fetch(endpoint)
        .then(response => response.json())
        .then(data => {
            createDishOptions(data);
        });

    function createDishOptions(data) {
        data.forEach((dish) => {
            $('#tagSearch').append('<option>' + dish.dish_name + '</option>');
        });
    }

    $(document).ready(function() {
        $("#restoSearch").selectmenu();
        $("#tagSearch").selectmenu();
    });
    </script>
</head>

<section class="search-bar">

    <h2 id="searchHead">Save money, eat better:</h2>

    <form action="/search" method="get">

        <fieldset>
            <label for="restoSearch">SEARCH BY RESTAURANT</label>
            <select name="restoSearch" id="restoSearch"></select>
            <label for="tagSearch">SEARCH BY DISH</label>
            <select name="tagSearch" id="tagSearch"></select>

        </fieldset>
    </form>

</section>

